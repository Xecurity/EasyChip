<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#ECF1F2"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <TextView android:id="@+id/settings"
              android:layout_alignParentTop="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10sp"
              android:textColor="#000000"
              android:textSize="17sp"
              android:text="@string/setting_descripton" />
    <Button android:id="@+id/change_email_button"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#060004"
            android:text="@string/button_change_email"
            android:onClick="change_email_address" />

</RelativeLayout>